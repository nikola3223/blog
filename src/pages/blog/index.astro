---
import SingleArticle from "../../components/SingleArticle.astro";
import { articlesList } from "../../quearies/articles.js";

import Header from "../../components/Header.astro";
import CategoryBar from "../../components/CategoryBar.astro";
import Footer from "../../components/Footer.astro";
import InfinityHorizontalSlider from "../../components/InfinityHorizontalSlider.astro";
import DefaultLayout from "../../layouts/DefaultLayout.astro";
let counter = 0;
---

<style>
    .article-box {
        display: grid;
        grid-template-columns: repeat(
            2,
            2fr
        ); /* Create 3 columns each taking 2/3 of available width */
        grid-template-rows: repeat(3, auto); /* Create 2 rows */
        justify-items: center;
        gap: 10px;
    }
    /* .article-box {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
    }
    img {
        align-self: center;
    }

    .article-item {
        width: 45vw;
    }

    @media screen and (max-width: 550px) {
        .article-item {
            width: 100vw;
        }
    } */
</style>

<DefaultLayout>
    <InfinityHorizontalSlider />
    <div class="article-box">
        {
            articlesList.posts.data.map((item) => {
                if (counter < 6) {
                    counter++;
                    return (
                        <div class="article-item">
                            <SingleArticle
                                url={item.attributes.slug}
                                image={item.attributes.image}
                                name={item.attributes.name}
                            />
                        </div>
                    );
                }
            })
        }
    </div>
</DefaultLayout>
