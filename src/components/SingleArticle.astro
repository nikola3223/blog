---
import { Image } from "astro:assets";

const { url, image, name } = Astro.props;
---

<style>
    a {
        position: relative;
    }
    h2 {
        color: whitesmoke;
        position: absolute;
        bottom: 0;
        left: 6%;
        text-shadow: black 5px;
    }
    img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 20px;
    }
    
</style>
<div class="article__box__item">
    <a href={`/blog/${url}`}>
        <h2>{name}</h2>
        <Image
            src={image.data.attributes.url}
            alt={image.data.attributes.alternativeText}
            width="200"
            height="200"
        />
    </a>
</div>
