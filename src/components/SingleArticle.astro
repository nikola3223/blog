---
import { Image } from "astro:assets";

const { url, image, name } = Astro.props;
---

<style>
    a {
        position: relative;
        background: rgb(0, 0, 0);
        height: 100%;
        display: block;
        border-radius: 20px;
    }
    h2 {
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 2;
        max-width: 100%;
        overflow: hidden;
        color: #f5f5f5;
        position: absolute;
        bottom: 0;
        left: 5px;
        text-shadow: black 5px;
        z-index: 2;
    }
    img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 20px;
    }
    .overlay {
        z-index: 1;
        position: absolute;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            0deg,
            rgba(0, 0, 0, 0.6519782913165266) 22%,
            rgba(255, 255, 255, 0) 100%
        );
        background-size: cover;
        border-radius: 20px;
    }
</style>
<div class="article__box__item">
    <a href={`/blog/${url}`}>
        <h2>{name}</h2>
        <div class="overlay"></div>
        <Image
            src={image.data.attributes.url}
            alt={image.data.attributes.alternativeText}
            width="200"
            height="200"
        />
    </a>
</div>
