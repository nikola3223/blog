---
import { categoryList } from "../quearies/category.js";
---
<div class="topnav" id="myTopnav">
  <div class="topnavA">
    {
      categoryList.categories.data.map(({ attributes }) => {
        return <a href={`/categorys/${attributes.slug}`}>{attributes.name}</a>;
      })
    }
  </div>
</div>

<style>
    body {
      font-family: Arial, Helvetica, sans-serif;
    }
  
  .topnav {
    display: flex;
    margin: auto;
    justify-content: center;
    overflow: hidden;
    background-color: #E76025;
  }

  .categoryBarSearchIcon {
    display: flex;
    justify-content: right;
  }

  .topnav a {
    float: left;
    display: block;
    color: #f2f2f2;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
    font-size: 17px;
  }

  .topnav a:hover {
    background-color: #E8A025;
    color: black;
  }
  
</style>
