---
import { Image } from "astro:assets";
import SearchLineIcon from "../images/search-line-icon.svg";

import { categoryList } from "../quearies/category.js";
---
<div class="topnav" id="myTopnav">
  <div class="topnavA">
    {
      categoryList.categories.data.map(({ attributes }) => {
        return <a href={`/categorys/${attributes.slug}`}>{attributes.name}</a>;
      })
    }
  </div>
  <div class="categoryBarSearchIcon">
    <Image src={SearchLineIcon} alt="logo" width="42" height="42" />
  </div>
</div>

<style>
  body {
    font-family: Arial, Helvetica, sans-serif;
  }

  .topnav {
    overflow: hidden;
    background-color: #9ca5b4;
  }

  .topnavA {
    margin-left: 15vw;
  }

  .categoryBarSearchIcon {
    display: flex;
    justify-content: right;
    margin-right: 10vw;
  }

  .topnav a {
    float: left;
    display: block;
    color: #f2f2f2;
    text-align: center;
    margin-right: 5vw;
    padding: 14px 16px;
    text-decoration: none;
    font-size: 17px;
  }

  .topnav a:hover {
    background-color: #ddd;
    color: black;
  }

  .topnav a.active {
    background-color: #04aa6d;
    color: white;
  }

  .topnav .icon {
    display: none;
  }

