---
import { Image } from "astro:assets";
import logoBaroveWhite from "../images/logoBaroveWhite.svg";
import CategoryBar from "./CategoryBar.astro";
---

<style>
  body {
    font-family: "Arial", sans-serif;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  header {
    background-color: #141414;
    color: white;
    padding: 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo img {
    margin-left: 15vw;
    max-width: 100px; /* Set the max width for your logo */
  }

  .weather {
    margin-left: 20px;
    text-align: right;
  }

  .location {
    margin-right: 15vw;
    font-size: 18px;
    font-weight: bold;
  }

  .temperature {
    font-size: 24px;
    margin: 5px 0;
  }

  .description {
    font-size: 16px;
    color: #ccc;
  }

  .icon img {
    max-width: 50px;
  }

  nav {
    display: flex;
    align-items: center;
  }
</style>
<header>
  <div class="logo">
    <Image src={logoBaroveWhite} alt="logo" width="374" height="68" />
  </div>
  <nav>
    <section class="weather">
      <div class="location">Sofia, Bulgaria</div>
      <div class="temperature" id="temperature"></div>
      <div class="description" id="description"></div>
      <div class="icon" id="weatherIcon"></div>
    </section>
  </nav>

  <script>
    const apiKey = "YOUR_OPENWEATHERMAP_API_KEY"; // Replace with your actual API key
    const apiUrl = `https://api.openweathermap.org/data/2.5/weather?q=Sofia,bg&appid=${apiKey}&units=metric`;

    fetch(apiUrl)
      .then((response) => response.json())
      .then((data) => {
        const temperatureElement = document.getElementById("temperature");
        const descriptionElement = document.getElementById("description");
        const iconElement = document.getElementById("weatherIcon");

        temperatureElement.textContent = `${data.main.temp}Â°C`;
        descriptionElement.textContent = data.weather[0].description;

        const iconUrl = `https://openweathermap.org/img/wn/${data.weather[0].icon}.png`;
        iconElement.innerHTML = `<img src="${iconUrl}" alt="Weather Icon">`;
      })
      .catch((error) => console.error("Error fetching weather data:", error));
  </script>
</header>
  <CategoryBar />
